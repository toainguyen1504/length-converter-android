<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/convertBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="80dp"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:elevation="8dp"
        android:background="@drawable/round_button_bg"
        android:contentDescription= "@string/convert_button_desciption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        app:srcCompat="@drawable/convert"
        app:tint="@color/purple" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/topHalf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/top_gradient_bg"
            android:orientation="vertical"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:text="@string/length_converter"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="100dp"

                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/inputTop"
                            android:layout_width="200dp"
                            android:layout_height="72dp"
                            android:background="@drawable/input_underline_white"
                            android:hint="1000000"
                            android:inputType="text"
                            android:paddingBottom="6dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@color/white"

                            android:textColorHint="@color/white"
                            android:textSize="60sp"
                            android:textCursorDrawable="@drawable/cursor_white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iconTop"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="clip_vertical"
                            android:layout_marginStart="24dp"

                            android:layout_marginTop="16dp"
                            app:layout_constraintEnd_toStartOf="@+id/unitTopTxt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/drop_down"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/unitTopTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="clip_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/unit_millimetre"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            app:layout_constraintStart_toEndOf="@+id/iconTop"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomHalf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topHalf">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/inputBottom"
                            android:layout_width="200dp"
                            android:layout_height="72dp"
                            android:background="@drawable/input_underline_purple"
                            android:hint="1000"
                            android:inputType="text"
                            android:paddingBottom="6dp"
                            android:textColor="@color/purple"
                            android:textColorHint="@color/purple"
                            android:textSize="60sp"
                            android:textCursorDrawable="@drawable/cursor_purple"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iconBottom"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="clip_vertical"
                            android:layout_marginStart="24dp"

                            android:layout_marginTop="16dp"
                            app:layout_constraintEnd_toStartOf="@+id/unitBottomTxt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/drop_down"
                            app:tint="@color/purple" />

                        <TextView
                            android:id="@+id/unitBottomTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="clip_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/unit_metre"
                            android:textColor="@color/purple"
                            android:textSize="20sp"
                            app:layout_constraintStart_toEndOf="@+id/iconBottom"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>